{
	"title": "SilverERP-Adapter",
	"description": "elastic.io component for the SilverERP API",
	"docsUrl": "https://www.silvererp.com",
	"buildType": "docker",
	"credentials": {
		"fields": {
			"apiKey": {
				"label": "API key",
				"required": true,
				"viewClass": "TextFieldWithNoteView",
				"note": "Please use the <b>SilvERP</b> API-Key."
			}
		}
	},
	"triggers": {
		"getAddressesPolling": {
			"title": "Poll-Adresses",
			"description": "Get Address from SilvERP",
			"type": "polling",
			"main": "./lib/triggers/getAddressesPolling.js",
			"metadata": {
				"out": "./lib/schemas/getAddresses.out.json"
			}
		},
		"getArticlesPolling": {
			"title": "Poll-Article",
			"description": "Get Article from SilvERP",
			"type": "polling",
			"main": "./lib/triggers/getArticlesPolling.js",
			"metadata": {
				"out": "./lib/schemas/getArticles.out.json"
			}
		},
		"getOrganisationsPolling": {
			"title": "Poll-Organisation",
			"description": "Get Article from SilvERP",
			"type": "polling",
			"main": "./lib/triggers/getOrganisationsPolling.js",
			"metadata": {
				"out": "./lib/schemas/getOrganisations.out.json"
			}
		}
	},
	"actions": {
		"upsertOrganization": {
			"main": "./lib/actions/upsertProduct.js",
			"title": "Upsert an Product in SilvERP",
			"metadata": {
				"in": "./lib/schemas/upsertProduct.in.json"
			}
		}
	}
}